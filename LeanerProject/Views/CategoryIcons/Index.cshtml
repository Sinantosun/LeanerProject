@model List<LeanerProject.Models.Entities.CategoryIcons>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<div class="col-lg-4 col-md-3">
    <small class="text-light fw-semibold">Kategori İkonları</small>
    <div class="mt-3">

        <div class="modal fade" id="backDropModal" data-bs-backdrop="static" tabindex="-1">
            <div class="modal-dialog">
                <form class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="backDropModalTitle">Uyarı</h5>
                        <button type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col mb-3">
                                <label class="form-label">Bu kaydı silmek istediğinze emin misiniz?</label><br />
                                <small>Bu işlem geri alınamaz.</small>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                            Kapat
                        </button>
                        <button type="button" class="btn btn-outline-danger deleteAboutConfirmButton">
                            Sil
                        </button>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="card">

    <span class="card-header">
        Kategori İkon alanı ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
    </span>



    <div class="table-responsive text-nowrap">

        <a href="/CategoryIcons/AddIcon/" style="margin-left:23px; position:relative" class="btn btn-outline-primary">Yeni İkon Ekle</a>
        <br />
        <br />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th><strong>#</strong></th>
                    <td>İkon</td>
                    <td>ikon Görsel</td>
                    <td>Sil</td>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <th><strong>@count</strong></th>
                        <td>@item.IconType</td>
                        <td><i class="@item.IconType"></i></td>
                        <td><a class="btn btn-outline-danger" href="/CategoryIcons/DeleteIcon/@item.CategoryIconsID">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<br />
<br />



@if (TempData["Result"] != null)
{



    <div class="alert alert-dark" id="alert" style="display:none">
        @TempData["Result"].ToString()
    </div>

    <script>
        $("#alert").fadeIn();
        $("#alert").fadeOut(2500);
    </script>

}

