@model List<LearnerProject.Models.Entities.Course>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/TeacherLayout/Index.cshtml";
    int count = 0;
}

<h2>Kurslarım</h2>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<div class="card">

    <span class="card-header">
        Kurs alanı ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
        <br />
        <small><strong>Not:</strong>Tema bütünlüğü için bu alanda tek kayıt bulunmalıdır.</small>
    </span>

    <div class="col-md-12 container-fluid">

        <br />
        <a href="/TeacherCourse/AddCourse/" class="btn btn-outline-primary">Yeni Kurs Ekle</a>
        <br /><br />
        @if (Model.Count > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><strong>#</strong></th>
                        <td>Kurs Adı</td>
                        <td>Açıklama</td>
                        <td colspan="2">İşlem</td>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th><strong>@count</strong></th>
                            <td>@item.CourseName </td>
                            <td>@(item.Description.Length>50 ? item.Description.Substring(0,50) + "...": item.Description)</td>

                            <td><a href="/TeacherCourse/DeleteCourse/@item.CourseId" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/TeacherCourse/UpdateCourse/@item.CourseId" class="btn btn-outline-success">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">
                Burada Hiç Veri Yok.
            </div>
        }

    </div>
</div>

<br />
<br />

@if (TempData["Result"] != null)
{

    <div class="alert alert-dark" id="alert" style="display:none">
        @TempData["Result"].ToString()
    </div>

    <script>
        $("#alert").fadeIn();
        $("#alert").fadeOut(2500);
    </script>

}



