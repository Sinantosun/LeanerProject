
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="untree_co-hero overlay" style="background-image: url('/Templates/learner-1.0.0/images/hero-img-1-min.jpg'); ">


    <div class="container">
        <div class="row align-items-center justify-content-center">

            <div class="col-12">

                <div class="row justify-content-center ">

                    <div class="col-lg-6 text-center ">


                        <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">İletişim Sayfası</h1>
                    </div>


                </div>

            </div>

        </div>
    </div>

</div>






<div class="untree_co-section">
    <div class="container">
        @if (TempData["Result"] != null)
        {

            <script src="~/Scripts/jquery-3.4.1.min.js"></script>

            <div class="alert alert-dark" id="alert" data-aos="fade-up" data-delay="100" style="display:none">
                @Html.Raw(TempData["Result"])
            </div>

            <script>
                $("#alert").fadeIn();
             
            </script>

        }
        <div class="row mb-5">
            @Html.Action("ContactDetail")
            <div class="col-lg-7 mr-auto order-1" data-aos="fade-up" data-aos-delay="200">
                <form method="post">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <input type="text" class="form-control" name="SenderNameSurname" placeholder="Adınız Soyadınız">
                        </div>
                        <div class="col-6 mb-3">
                            <input type="email" name="Email" class="form-control" placeholder="Email Adresiniz">
                        </div>
                        <div class="col-12 mb-3">
                            <input type="text" class="form-control" name="Subject" placeholder="Başlık">
                        </div>
                        <div class="col-12 mb-3">
                            <textarea name="MessageContent" id="" cols="30" rows="7" class="form-control" placeholder="Mesajınız"></textarea>
                        </div>

                        <div class="col-12">
                            <input type="submit" value="Mesaj Gönder" class="btn btn-primary">
                        </div>
                    </div>
                </form>
            </div>
        </div>


    </div>
</div>