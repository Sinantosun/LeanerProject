<section class="content">
    <div class="row">


        <div class="col-md-3">
            @Html.Action("MessagesSide", "Messages")
        </div>


        <div class="col-md-9">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">Yeni Mesaj Gönder</h3><br />
                    <small>* İşaretli alanları eksiksiz doldurduğunuzdan emin olunuz.</small>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="form-group">
                        <small>Mesaj göndermek istediğiniz üyeyi seçiniz</small>
                        <select onchange="change(this.value)" class="form-control">
                            <option value="">Seçiniz</option>
                            <option value="Teacher">Öğretmen</option>
                            <option value="Student">Öğrenci</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>
                    <br />
                    <div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Kime *:">
                        </div>
                        <br />
                        <div class="form-group">
                            <input class="form-control" placeholder="Email *:">
                        </div>
                        <br />
                        <div class="form-group">
                            <input class="form-control" placeholder="Başlık: *">
                        </div>
                        <br />
                        <div class="form-group">
                            <textarea placeholder="Mesajınız *" rows="10" class="form-control"></textarea>
                        </div>
                        <br />
                        <div class="form-group">

                            <i class="bx bx-paperclip"></i>
                            <label for="filechoose">Dosya Seç</label>
                            <p class="help-block"><small>Yanlızca ekte bir adet dosya gönderebilirsiniz. (İsteğe Bağlı)</small></p>
                            <input id="filechoose" type="file" class="form-control" name="attachment">
                        </div>
                        <br />
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary"><i class="bx bx-send"></i> Gönder</button>
                        </div>


                    </div>

                </div>

            </div>

        </div>


    </div>
</section>