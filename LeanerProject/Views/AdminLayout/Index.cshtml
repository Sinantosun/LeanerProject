
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="tr"
      class="light-style layout-menu-fixed"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="~/Templates/sneat-1.0.0/assets/"
      data-template="vertical-menu-template-free">
@Html.Partial("~/Views/AdminLayout/_AdminHeadPartial.cshtml")

<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            @Html.Partial("~/Views/AdminLayout/_AdminSideBarPartial.cshtml")
            <div class="layout-page">
                @Html.Partial("~/Views/AdminLayout/_AdminNavbarPartial.cshtml")
                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                        @RenderBody()
                    </div>
                    @Html.Partial("~/Views/AdminLayout/_AdminFooterPartial.cshtml")
                    <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    @Html.Partial("~/Views/AdminLayout/_AdminScriptsPartial.cshtml")
</body>
</html>
