@model List<LearnerProject.Models.Entities.Review>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/StudentLayout/Index.cshtml";
}

<h2>Yorumlar / Değerlendirmeler</h2>

<a href="/StudentReviews/CreateReview" class="btn btn-outline-primary">Kurs Yorum Yap</a>

<br />
<br />
@if (Model.Count > 0)
{
    <div class="row mb-5">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100">
                    <img class="card-img-top" src="/Templates/learner-1.0.0/images/img-school-1-min.jpg" alt="Card image cap" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Course.CourseName</h5>
                        <span> Yorum : @item.Comment</span><br />
                        <span> Puan : @item.ReviewValue / 5</span><br /><br />
                        <a href="/StudentReviews/StudentReviewDetail/@item.ReviewId" class="btn btn-outline-primary">Detay</a>
                    </div>
                </div>
            </div>
        }

    </div>
}
else
{
    <div class="container-fluid">
        <div class="alert alert-secondary">
            <span style="color:black"> Henüz Herhangi Bir Kursa Yorum Yapmadınız </span>
        </div>
    </div>
}
